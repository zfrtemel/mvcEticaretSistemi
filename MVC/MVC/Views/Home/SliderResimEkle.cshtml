
@{
    ViewBag.Title = "Slider Resim Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
} 
    <form action="/Home/SliderResimEKle" method="post" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group">
                <label>Slider Adı </label>
                <input type="text" class="form-control" name="SliderAdi">
            </div>
            <div class="form-group">
                <label>Slider Kategori </label>
                <input type="text" class="form-control" name="SliderKategori">
            </div>
            <div class="form-group">
                <label>Slider Detay </label>
                <input type="text" class="form-control" name="SliderDetay">
            </div>
            <div class="form-group">
                <label>Slider Fiyat </label>
                <input type="text" class="form-control" name="SliderFiyat">
            </div>
            <div class="form-group">
                <label>Slider İndirim Fiyat </label>
                <input type="text" class="form-control" name="Slider_indirimFiyat">
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">Slider Resmi</label>
                <div class="controls col-md-9">
                    <div class="fileupload fileupload-new" data-provides="fileupload">
                        <span class="btn btn-white btn-file">
                            <span class="fileupload-new"><i class="icon-paper-clip"></i> Resim Seç</span>
                            <input type="file" name="fileupload" class="default" />
                        </span>
                        <span class="fileupload-preview" style="margin-left:5px;"></span>
                        <a href="#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none; margin-left:5px;"></a>
                    </div>
                </div>

            </div>
            <br /><br />
            <input type="submit" name="name" value="Kaydet" class="btn btn-success" />
        </div>
    </form>